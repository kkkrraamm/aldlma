<!-- This would be a PNG file in production. For now, creating a placeholder SVG -->
<svg width="300" height="600" viewBox="0 0 300 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="screenGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#F5F5F5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0E0E0;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3"/>
      <feOffset dx="0" dy="3" result="offsetblur"/>
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.2"/>
      </feComponentTransfer>
      <feMerge>
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Phone Frame -->
  <rect x="10" y="10" width="280" height="580" rx="30" fill="#1a1a1a" filter="url(#shadow)"/>
  <rect x="20" y="20" width="260" height="560" rx="25" fill="#000"/>
  
  <!-- Screen -->
  <rect x="25" y="60" width="250" height="480" rx="20" fill="url(#screenGradient)"/>
  
  <!-- Status Bar -->
  <rect x="25" y="60" width="250" height="25" fill="#2E7D32"/>
  <text x="150" y="77" text-anchor="middle" fill="white" font-size="12" font-family="Arial">9:41 AM</text>
  
  <!-- App Header -->
  <rect x="25" y="85" width="250" height="60" fill="#2E7D32"/>
  <text x="150" y="120" text-anchor="middle" fill="white" font-size="20" font-weight="bold" font-family="Arial">الدلما</text>
  
  <!-- Navigation Icons -->
  <g fill="#4CAF50">
    <rect x="40" y="160" width="50" height="50" rx="10"/>
    <rect x="100" y="160" width="50" height="50" rx="10"/>
    <rect x="160" y="160" width="50" height="50" rx="10"/>
    <rect x="220" y="160" width="50" height="50" rx="10"/>
  </g>
  
  <!-- Content Cards -->
  <rect x="40" y="230" width="220" height="80" rx="10" fill="white" filter="url(#shadow)"/>
  <rect x="40" y="50" width="60" height="8" rx="4" fill="#2E7D32" opacity="0.3"/>
  
  <rect x="40" y="330" width="220" height="80" rx="10" fill="white" filter="url(#shadow)"/>
  <rect x="50" y="350" width="80" height="8" rx="4" fill="#FFB300" opacity="0.3"/>
  
  <rect x="40" y="430" width="220" height="80" rx="10" fill="white" filter="url(#shadow)"/>
  <rect x="50" y="450" width="100" height="8" rx="4" fill="#00BCD4" opacity="0.3"/>
  
  <!-- Bottom Navigation -->
  <rect x="25" y="520" width="250" height="20" fill="#F5F5F5"/>
  <circle cx="75" cy="530" r="3" fill="#2E7D32"/>
  <circle cx="125" cy="530" r="3" fill="#999"/>
  <circle cx="175" cy="530" r="3" fill="#999"/>
  <circle cx="225" cy="530" r="3" fill="#999"/>
  
  <!-- Home Indicator -->
  <rect x="135" y="555" width="30" height="3" rx="1.5" fill="#666"/>
</svg>
